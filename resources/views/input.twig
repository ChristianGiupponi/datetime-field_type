{{ asset_add("scripts.js", "anomaly.field_type.datetime::js/moment-with-locales.min.js") }}
{{ asset_add("scripts.js", "anomaly.field_type.datetime::js/datetimepicker.js") }}
{{ asset_add("scripts.js", "anomaly.field_type.datetime::js/input.js") }}

<input
        type="text"
        class="form-control"
        data-toggle="datetime"
        value="{{ field_type.value }}"
        name="{{ field_type.getInputName() }}"
        placeholder="{{ field_type.config.placeholder }}"
        data-date-language="{{ field_type.locale ?: config_get('app.locale') }}"
        data-date-format="{{ field_type.config.format ?: 'MM/DD/YYYY hh:mm A' }}"
        data-date-minuteStepping="{{ field_type.config.step ?: 5 }}"
        data-date-pickTime="true"
        >
