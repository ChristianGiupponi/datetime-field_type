{{ asset_add("scripts.js", "anomaly.field_type.datetime::js/input.js", ["debug"]) }}

<div class="input-group">

    {% if field_type.config.mode in ['date', 'datetime'] %}

        <span class="input-group-addon">
            <i class="fui-calendar"></i>
        </span>

        <input
                type="text"
                class="form-control datepicker"
                value="{{ field_type.format(field_type.getPhpDateFormat()) }}"
                name="{{ field_type.getInputName() }}[date]"
                placeholder="{{ 'now'|date(field_type.getPhpDateFormat()) }}"
                data-date-format="{{ field_type.getPluginDateFormat() }}">

    {% endif %}


    {% if field_type.config.mode in ['time', 'datetime'] %}

        <span class="input-group-addon">
            <i class="fui-time"></i>
        </span>

        <input
                type="text"
                class="form-control timepicker"
                value="{{ field_type.format(field_type.config.time_format) }}"
                name="{{ field_type.getInputName() }}[time]"
                placeholder="{{ 'now'|date(field_type.config.time_format) }}"
                data-time-format="{{ field_type.getTimeFormat() }}">

    {% endif %}

</div>