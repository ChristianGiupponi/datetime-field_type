<input
        type="text"
        name="{{ field_type.getInputName() }}"
        value="{{ field_type.value }}"
        class="{{ field_type.class }}"
        placeholder="{{ placeholder }}"
        data-toggle="datetime"
        data-date-language="{{ field_type.locale }}"
        data-date-format="{{ field_type.config.format }}"
        data-date-minuteStepping="{{ field_type.config.step }}"
        data-date-pickTime="{{ field_type.config.pick_time ? 'true' : 'false' }}"
        >
